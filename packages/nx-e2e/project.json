{
  "name": "@omni/nx-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/nx-e2e/src",
  "targets": {
    "e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-e2e/jest.config.ts",
        "passWithNoTests": true,
        "runInBand": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/nx-e2e/**/*.ts"]
      }
    },
    "npm-registry:serve": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": "packages/nx-e2e/verdaccio.config.yml",
        "storage": ".cache/npm-registry/storage"
      }
    }
  },
  "implicitDependencies": ["@omni/nx"]
}
