{
  "$schema": "https://json-schema.org/draft/2020-12/schemaa",
  "$id": "https://github.com/gilhardl/omni/raw/main/packages/nx/src/generators/preset/schema.json",
  "title": "Omni workspace generator.",
  "description": "Generate new Omni workspace.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The workspace name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for your workspace ?"
    }
  },
  "required": ["name"]
}
