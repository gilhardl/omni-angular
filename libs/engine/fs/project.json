{
  "name": "fs",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/engine/fs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/engine/fs",
        "main": "libs/engine/fs/src/index.ts",
        "tsConfig": "libs/engine/fs/tsconfig.lib.json",
        "assets": ["libs/engine/fs/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/engine/fs/**/*.ts",
          "libs/engine/fs/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/engine/fs/jest.config.ts"
      }
    }
  },
  "tags": ["type:domain", "scope:engine"]
}
