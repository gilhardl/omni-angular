{
  "name": "nx",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/engine/nx/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/engine/nx",
        "main": "libs/engine/nx/src/index.ts",
        "tsConfig": "libs/engine/nx/tsconfig.lib.json",
        "assets": ["libs/engine/nx/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/engine/nx/**/*.ts",
          "libs/engine/nx/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/engine/nx/jest.config.ts"
      }
    }
  },
  "tags": ["type:domain", "scope:engine"]
}
